<?xml version="1.0" encoding="utf-8"?>
<resources>
     Add these color definitions if you don't have colors.xml
    <color name="purple_200">#BB86FC</color>
    <color name="purple_500">#6200EE</color>
    <color name="input_box_stroke">#FFFFFF</color>
    <color name="hint_color">#B3FFFFFF</color>
    <color name="stroke_color">#80FFFFFF</color>
    <color name="input_hint">#FFFFFF</color>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
    </style>

    <!-- Form input style -->
    <style name="FormInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="boxStrokeColor">@color/stroke_color</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
</resources>