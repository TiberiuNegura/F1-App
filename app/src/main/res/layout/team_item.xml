<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E1E1E"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- ImageView for the Team Logo -->
    <ImageView
        android:id="@+id/teamImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Team logo"
        android:layout_marginEnd="12dp" />

    <!-- TextView for the Team Name -->
    <TextView
        android:id="@+id/teamName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Team name"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Edit Icon -->
    <ImageButton
        android:id="@+id/editTeam"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit Team"
        android:src="@drawable/edit"
        android:layout_marginStart="8dp" />

    <!-- Delete Icon -->
    <ImageButton
        android:id="@+id/deleteTeam"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete Team"
        android:src="@drawable/delete"
        android:layout_marginStart="8dp" />

</LinearLayout>
